{
  "openapi": "3.0.0",
  "info": {
    "title": "Content Hub API",
    "version": "0.1.0",
    "description": "Personal feed aggregator that collects content from RSS feeds and web sources. CORS enabled for all origins."
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Home endpoint",
        "description": "Returns API information",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Content Hub API"
                    },
                    "version": {
                      "type": "string",
                      "example": "0.1.0"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Returns API health status",
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/rss": {
      "get": {
        "summary": "Get RSS feeds",
        "description": "Fetch and return articles from configured RSS feeds with pagination",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Items per page (max 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "articles": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Article"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "No RSS feeds configured"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/scrape": {
      "get": {
        "summary": "Get scraped content",
        "description": "Scrape and return articles from configured websites with pagination",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Items per page (max 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "articles": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Article"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "No scraping URLs configured"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/feeds": {
      "get": {
        "summary": "Get unified feeds",
        "description": "Get combined and deduplicated articles from all sources with pagination",
        "parameters": [
          {
            "name": "source",
            "in": "query",
            "description": "Filter by source type",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["rss", "scrape"]
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Items per page (max 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search keyword in title or summary",
            "required": false,
            "schema": {
              "type": "string",
              "example": "AI"
            }
          },
          {
            "name": "source_name",
            "in": "query",
            "description": "Filter by source name (e.g., TechCrunch)",
            "required": false,
            "schema": {
              "type": "string",
              "example": "TechCrunch"
            }
          },
          {
            "name": "start_date",
            "in": "query",
            "description": "Filter by start date (ISO format)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-01-01"
            }
          },
          {
            "name": "end_date",
            "in": "query",
            "description": "Filter by end date (ISO format)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-12-31"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "articles": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Article"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    },
                    "filters": {
                      "type": "object",
                      "properties": {
                        "source": {
                          "type": "string",
                          "nullable": true
                        },
                        "search": {
                          "type": "string",
                          "nullable": true
                        },
                        "source_name": {
                          "type": "string",
                          "nullable": true
                        },
                        "start_date": {
                          "type": "string",
                          "nullable": true
                        },
                        "end_date": {
                          "type": "string",
                          "nullable": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Article": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Example Article Title"
          },
          "link": {
            "type": "string",
            "example": "https://example.com/article"
          },
          "summary": {
            "type": "string",
            "example": "Brief description of the article"
          },
          "source": {
            "type": "string",
            "example": "TechCrunch"
          },
          "published": {
            "type": "string",
            "example": "2024-01-15T10:30:00Z"
          },
          "type": {
            "type": "string",
            "enum": ["rss", "scrape"],
            "example": "rss"
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "example": 1
          },
          "per_page": {
            "type": "integer",
            "example": 20
          },
          "total_items": {
            "type": "integer",
            "example": 80
          },
          "total_pages": {
            "type": "integer",
            "example": 4
          },
          "has_next": {
            "type": "boolean",
            "example": true
          },
          "has_prev": {
            "type": "boolean",
            "example": false
          }
        }
      }
    }
  }
}
