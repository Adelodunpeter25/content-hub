{
  "openapi": "3.0.0",
  "info": {
    "title": "Content Hub API",
    "version": "0.1.0",
    "description": "Personal feed aggregator that collects content from RSS feeds and web sources."
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "System",
      "description": "System health and information"
    },
    {
      "name": "Users",
      "description": "User management and preferences"
    },
    {
      "name": "Feeds",
      "description": "Content feeds from RSS and web scraping"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["System"],
        "summary": "Home endpoint",
        "description": "Returns API information",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                                    "type": "integer",
                      "example": "Content Hub API"
                    },
                    "version": {
                                    "type": "integer",
                      "example": "0.1.0"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "description": "Create a new user account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                                  "type": "integer",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "name": {
                                  "type": "integer",
                    "example": "John Doe"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Invalid input or user already exists"
          }
        }
      }
    },
    "/api/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user",
        "description": "Get user by ID",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
                            "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User found"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/users/{user_id}/preferences": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user preferences",
        "description": "Get user feed preferences",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
                            "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Preferences found"
          },
          "404": {
            "description": "User or preferences not found"
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update user preferences",
        "description": "Update user feed preferences",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
                            "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "feed_sources": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "example": ["TechCrunch", "The Verge"]
                  },
                  "feed_types": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "example": ["rss", "scrape"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Preferences updated"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/users/{user_id}/feeds": {
      "get": {
        "tags": ["Users"],
        "summary": "Get personalized feeds",
        "description": "Get personalized feed based on user preferences",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
                            "type": "integer",
              "example": 1
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Personalized feed"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["System"],
        "summary": "Health check",
        "description": "Returns API health status",
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                                    "type": "integer",
                      "example": "healthy"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/rss": {
      "get": {
        "tags": ["Feeds"],
        "summary": "Get RSS feeds",
        "description": "Fetch and return articles from configured RSS feeds with pagination",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Items per page (max 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "articles": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Article"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "No RSS feeds configured"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/scrape": {
      "get": {
        "tags": ["Feeds"],
        "summary": "Get scraped content",
        "description": "Scrape and return articles from configured websites with pagination",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Items per page (max 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "articles": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Article"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "No scraping URLs configured"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/feeds": {
      "get": {
        "tags": ["Feeds"],
        "summary": "Get unified feeds",
        "description": "Get combined and deduplicated articles from all sources with pagination",
        "parameters": [
          {
            "name": "source",
            "in": "query",
            "description": "Filter by source type",
            "required": false,
            "schema": {
                            "type": "integer",
              "enum": ["rss", "scrape"]
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Items per page (max 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search keyword in title or summary",
            "required": false,
            "schema": {
                            "type": "integer",
              "example": "AI"
            }
          },
          {
            "name": "source_name",
            "in": "query",
            "description": "Filter by source name (e.g., TechCrunch)",
            "required": false,
            "schema": {
                            "type": "integer",
              "example": "TechCrunch"
            }
          },
          {
            "name": "start_date",
            "in": "query",
            "description": "Filter by start date (ISO format)",
            "required": false,
            "schema": {
                            "type": "integer",
              "format": "date",
              "example": "2024-01-01"
            }
          },
          {
            "name": "end_date",
            "in": "query",
            "description": "Filter by end date (ISO format)",
            "required": false,
            "schema": {
                            "type": "integer",
              "format": "date",
              "example": "2024-12-31"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "articles": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Article"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    },
                    "filters": {
                      "type": "object",
                      "properties": {
                        "source": {
                                        "type": "integer",
                          "nullable": true
                        },
                        "search": {
                                        "type": "integer",
                          "nullable": true
                        },
                        "source_name": {
                                        "type": "integer",
                          "nullable": true
                        },
                        "start_date": {
                                        "type": "integer",
                          "nullable": true
                        },
                        "end_date": {
                                        "type": "integer",
                          "nullable": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Article": {
        "type": "object",
        "properties": {
          "title": {
                          "type": "integer",
            "example": "Example Article Title"
          },
          "link": {
                          "type": "integer",
            "example": "https://example.com/article"
          },
          "summary": {
                          "type": "integer",
            "example": "Brief description of the article"
          },
          "source": {
                          "type": "integer",
            "example": "TechCrunch"
          },
          "published": {
                          "type": "integer",
            "example": "2024-01-15T10:30:00Z"
          },
          "type": {
                          "type": "integer",
            "enum": ["rss", "scrape"],
            "example": "rss"
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "example": 1
          },
          "per_page": {
            "type": "integer",
            "example": 20
          },
          "total_items": {
            "type": "integer",
            "example": 80
          },
          "total_pages": {
            "type": "integer",
            "example": 4
          },
          "has_next": {
            "type": "boolean",
            "example": true
          },
          "has_prev": {
            "type": "boolean",
            "example": false
          }
        }
      }
    }
  }
}
