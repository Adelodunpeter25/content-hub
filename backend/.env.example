# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# RSS Feed URLs (comma-separated)
RSS_FEEDS=https://example.com/feed/,https://another-site.com/rss

# Web Scraping Targets (comma-separated)
SCRAPE_URLS=https://example-site.com

# Supabase PostgreSQL Connection
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# Redis/Valkey Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=900  # Cache time in seconds (default: 900 = 15 minutes)

# Social Media Sources
REDDIT_SUBREDDITS=technology,programming,python
YOUTUBE_CHANNELS=channel_id_1,channel_id_2

# Authentication
JWT_SECRET_KEY=your-secret-key-change-this
JWT_ACCESS_TOKEN_MINUTES=60
JWT_REFRESH_TOKEN_DAYS=30

# Email (Resend)
RESEND_API_KEY=re_your_api_key_here
RESEND_EMAIL_FROM=no-reply@example.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
